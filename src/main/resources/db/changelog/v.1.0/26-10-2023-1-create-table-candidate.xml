<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">
    <changeSet
            id="26-10-2023-1-create-table-candidate" author="domashkevich">
        <createTable tableName="candidate">
            <column autoIncrement="true" name="id" type="serial">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(32)">
                <constraints nullable="false"/>
            </column>
            <column name="surname" type="varchar(32)">
                <constraints nullable="false"/>
            </column>
            <column name="lastname" type="varchar(32)">
                <constraints nullable="false"/>
            </column>
            <column name="photo_link" type="varchar(256)">
                <constraints nullable="true"/>
            </column>
            <column name="cv_link" type="varchar(256)">
                <constraints nullable="true"/>
            </column>
            <column name="description" type="varchar(256)">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>
</databaseChangeLog>